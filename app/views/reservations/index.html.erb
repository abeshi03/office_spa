<div class="container">
  <div class="reservations_index">
    <h1 class="reservations">予約一覧表</h1>
    <%= render "calendar_form", reservations: @reservations %>

    <br>

    <%= link_to 'New Reservation', new_reservation_path %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Start time</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td><%= reservation.name %></td>
            <td><%= reservation.start_time %></td>
            <td><%= link_to 'Show', reservation %></td>
            <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>