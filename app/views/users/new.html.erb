<% provide(:title, '新規作成') %>
<%= render "layouts/header" %>
<div class="signup">
  <div class="signup_link">
    <h1>新規登録</h1>
    <div class="container">
      <div class="row-sm-12">
        <div class="col-sm-12">
          <%= form_with(model: @user, local: true) do |f| %>
            <%= render "shared/error_messages", object: f.object %>
            
            <%= f.label :name, "フルネーム" %>
            <%= f.text_field :name %>

            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>

            <%= f.label :password, "パスワード(6文字以上)" %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation, "パスワード(確認用)" %>
            <%= f.password_field :password_confirmation %>

            <%= f.submit "作成する", class: "btn btn-primary signup_btn" %>
          <% end %>
          <%= link_to "ゲストとしてログインする", gest_login_path, method: :post, class: "gest" %>
        </div>
      </div>
    </div>
  </div>
</div>
