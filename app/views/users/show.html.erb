<%= provide(:title, @user.name) %>
<div class="user_page">
  <div class="user_image">
    <%= image_tag "user.jpg" %> 
  </div>
  <div class="user_name">
    <%= @user.name %> 
  </div>
  <% if current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_path(current_user), class: "btn btn-primary btn-lg edit_btn" %>
  <% end %>
</div>
