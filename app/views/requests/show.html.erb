<%= provide(:title, "#{@request.user.name}の要望") %>
<div class="request_show">
  <div class="container">
    <div class="image_user">
      <h2>投稿者<%= link_to @request.user.name, requests_path %></h2>
      <p class="show_content"><%= @request.content %></p>
      <% if current_user.id == @request.user_id %>
        <%= link_to "要望を削除する", @request, method: :delete, data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </div>
    <div class="cf"></div>
    <div class="row-sm-12">
      <div class="col-sm-12">
        <%= form_with(model: [@request, @comment], local: true ) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <%= f.text_area :comment_content, placeholder: "コメントを入力", class: "comment_form" %>
          <div class="comment_btn">
            <%= f.submit "投稿", class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>