<div class="rating-box">
  <%= form_with model: review, url: menu_reviews_path(menu), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.hidden_field :menu_id, value: menu.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_area :content, class: "textarea review_content" %>
    <%= f.submit "口コミを投稿する", class: "btn btn-primary" %>
    <P>
      <%= link_to "口コミを確認する", menu_reviews_path(menu), class: "other_btn" %>
    </P>
  <% end %>
</div>
<%= javascript_pack_tag 'reviews.js' %>
